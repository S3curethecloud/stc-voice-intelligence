{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STC Voice Intelligence Output",
  "type": "object",
  "required": [
    "module",
    "intent_id",
    "confidence",
    "opening",
    "anchors",
    "dataset",
    "timestamp"
  ],
  "properties": {
    "module": {
      "type": "string",
      "const": "stc.voice.intelligence"
    },
    "intent_id": {
      "type": "string",
      "description": "Unique identifier of the matched dataset intent"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "opening": {
      "type": "string",
      "description": "Authoritative opening sentence from dataset"
    },
    "anchors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Anchor keywords or phrases for recall"
    },
    "dataset": {
      "type": "string",
      "description": "Name of dataset used for intent matching"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}
