{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STC Voice Intelligence Output",
  "type": "object",
  "properties": {
    "question": {
      "type": "string",
      "description": "Matched interview question"
    },
    "anchors": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Anchor cues for recall"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for intent match"
    }
  },
  "required": ["question", "anchors", "confidence"]
}
